	server 192.168.1.190:82 weight=1 max_fails=2 fail_timeout=3;
    }
    server {
	listen 81;
	server_name localhost;
	root html;
	access_log logs/81-access.log main; 
    }

    server {
	listen 82;
	server_name localhost;
	root html;
	access_log logs/82-access.log main;
    }

    server {
        listen       80;
        server_name  localhost;

	gzip on;
	gzip_buffers 32 4k;
	gzip_comp_level 6;
	gzip_min_length 4000;
	gzip_types text/css text/xml application/x-javascript;
        #charset koi8-r;

        #access_log  logs/host.access.log  main;

       # location =/index.html {
